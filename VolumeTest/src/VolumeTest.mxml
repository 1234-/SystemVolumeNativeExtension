<?xml version="1.0" encoding="utf-8"?>
<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	backgroundColor="0"
	applicationComplete="init()">
	
	<fx:Script>
		<![CDATA[
			import com.adobe.nativeextension.volume.VolumeController;
			import com.adobe.nativeextension.volume.events.VolumeEvent;
			
			import org.osmf.net.NetClient;
			
			private var _controller:VolumeController;
			
			protected function get controller():VolumeController {
				if ( !_controller ) {
					_controller = new VolumeController();
				}
				
				return _controller;
			}
			
			private const URL1:String = "http://qthttp.akamai.com.edgesuite.net/iphone_demo/Video_Content/martha_stewart/blueberry_pies/all.m3u8";
			private const URL2:String ="http://mediadelivery.adobe.com/adobevideodemo/manifests/hls-hillmancurtis-manifest.m3u8";
			
			private var video:StageVideo;
			
			private function init():void {
				controller.addEventListener( VolumeEvent.VOLUME_CHANGED, onVolumeChanged );
				controller.init();
				
				video = stage.stageVideos[0];
				video.viewPort = new Rectangle( 0, 0, wrapper.width, wrapper.height );
				
				var nc:NetConnection = new NetConnection();
				nc.connect( null );
				
				var ns:NetStream = new NetStream( nc );
				ns.client = new NetClient();
				ns.addEventListener( NetStatusEvent.NET_STATUS, onNetStatus );
				
				video.attachNetStream( ns );
				
				ns.play( URL1 );
			}
			
			private function onNetStatus( event:NetStatusEvent ):void {
				trace( event.info.code );
			}
			
			private function onVolumeChanged( event:VolumeEvent ):void {
				volumeSlider.value = event.volume
			}
			
			private function onSliderChange( event:Event ):void {
				var value:Number = volumeSlider.value;
				trace( "Set volume to:", value );
				controller.setVolume( value );
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<mx:UIComponent id="wrapper" width="100%" height="100%"/>
	
	<s:HSlider id="volumeSlider" width="100%" minimum="0" maximum="1" stepSize=".1" change="onSliderChange(event)"/>
	
</s:Application>
